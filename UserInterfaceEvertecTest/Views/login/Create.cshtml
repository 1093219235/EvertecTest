@model BusinessEvertecTest.DTO.loginDTO

@{
    ViewBag.Title = "Create Login";
}

<h2>CREAR LOGIN</h2>
<h5 style="color:red">@ViewBag.error</h5>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.customer_email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.customer_email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.customer_email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
        </div>
    </div>
 

   
                        
    <div class="form-group">
        @Html.LabelFor(model => model.admin, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.admin,
                        new SelectList(
    new List<SelectListItem>
    {
        new SelectListItem { Selected = false, Text = "SI", Value = "Y"},
        new SelectListItem { Selected = false, Text = "NO", Value = "N"},
    }, "Value", "Text", 1),htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.ValidationMessageFor(model => model.admin, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear Login" class="btn btn-danger" />
            @Html.ActionLink("Volver a inicio de Sesion", "Index", "login", new { }, new { @class = "btn btn-primary", @style = "color:white" })
        </div>
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
